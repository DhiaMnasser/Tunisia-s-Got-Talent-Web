{% extends 'base.html.twig' %}

{% block body %}
    <h1>My Cart</h1>
    <input id="myInput" type="text" placeholder="Search..">
    <table id="myTable">
        <thead>
            <tr>
{#                <th> Id </th>#}
                <th> Nomproduit </th>
                <th> Prix par unite</th>
                <th> Quantite </th>
                <th> Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligneCommande in ligneCommandes %}
            {% if ligneCommande.idPanier == panier   %}
            <tr class="lignecommande">
                <td>{{ ligneCommande.nomproduit }}  </td>
                <td> {{  ligneCommande.idproduit.prix   }}</td>
                <td>{{ ligneCommande.quantite }}  </td>
                <td>

                            <button>
                                <a href="{{ path('lignecommande_edit', { 'id': ligneCommande.id }) }}">edit</a>
                            </button>
                        <a class="btn btn-danger btn-outline" href="{{ path('lignecommande_supprimer',{'id':ligneCommande.id}) }}">Delete</a>


                </td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <div>
        <h3 id="prix total">
            Prix Total: {{ panier.prixTotal }}
        </h3>
    </div>

    <div>
        <button>
            <a class="btn btn-outline" href="{{ path('commande_new',{'id':panier.id}) }}">Checkout</a>
        </button>
    </div>
    <div>
        <button>
{#            <a class="btn btn-outline" href="{{ path('panier_vider',{'id':panier.id}) }}">Vider Panier</a>#}
        </button>
    </div>

    <script src="{{ asset('js/jquery-min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable .lignecommande").filter(function() {
                    $(this).toggle( $(this).text().toLowerCase().indexOf(value) > -1 );
                });
            });
        });
    </script>
{#            <button>#}
{#            <a href="{{ path('lignecommande_new') }}">Create a new ligneCommande</a>#}
{#            </button>#}

{% endblock %}
