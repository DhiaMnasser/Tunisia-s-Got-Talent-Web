
{% extends 'base.html.twig' %}

{% block body %}
    <script type="text/javascript">

        $(document).ready(function () {
            window.print();
        });

    </script>
    <h1>Commandes list</h1>
    <h1>Commande</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ commande.id }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{% if commande.date %}{{ commande.date|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Etat</th>
            <td>{% if commande.etat %}Yes{% else %}No{% endif %}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}

