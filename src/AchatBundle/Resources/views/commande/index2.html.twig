{% extends 'base2.html.twig' %}

{% block body %}
    <link href="{{ asset('css/style.css') }}" rel='stylesheet' type='text/css' media="all" />

    <h1>Commandes list</h1>
    <input id="myInput" type="text" placeholder="Search..">

    <table id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr class="commande">
                <td><a href="{{ path('commande_show2', { 'id': commande.id }) }}">{{ commande.id }}</a></td>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if commande.etat %}Validee{% else %}pending{% endif %}</td>
                <td>
                            <a class="actions" href="{{ path('commande_valider', { 'id': commande.id }) }}">valider</a>
                            <a class="actions" href="{{ path('commande_show2', { 'id': commande.id }) }}">show</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script src="{{ asset('js/jquery-min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable .commande").filter(function() {
                    $(this).toggle( $(this).text().toLowerCase().indexOf(value) > -1 );
                });
            });
        });
    </script>

{% endblock %}
