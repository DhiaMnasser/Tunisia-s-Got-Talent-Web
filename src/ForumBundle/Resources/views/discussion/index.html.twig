{% extends 'base.html.twig' %}

{% block body %}
    <h1>Discussions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Lienimg</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discussion in discussions %}
            <tr>
                <td><a href="{{ path('discussion_show', { 'id': discussion.id }) }}">{{ discussion.id }}</a></td>
                <td>{{ discussion.titre }}</td>
                <td>{{ discussion.texte }}</td>
                <td>{{ discussion.lienImg }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('discussion_show', { 'id': discussion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('discussion_edit', { 'id': discussion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="#">Create a new discussion</a>
        </li>
    </ul>
{% endblock %}
