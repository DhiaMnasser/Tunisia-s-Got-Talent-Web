{% extends 'base.html.twig' %}

{% block body %}
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Listes des Regions</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Les Régions</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Année</th>
                        <th>Durée(jours)</th>
                        <th>Ville</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nom</th>
                        <th>Année</th>
                        <th>Durée(jours)</th>
                        <th>Ville</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for i in events %}
                        <tr>
                            <td>{{ i.nom }}</td>
                            <td>{{ i.annee }}</td>
                            <td>{{ i.duree }}</td>
                            <td>{{ i.etat }}</td>
                            <td>
                                <a href="{{ path('event_updateA',{'id':i.id}) }}" class="btn btn-warning btn-circle">
                                    <i class="fas fa-cog"></i>
                                </a>
                                <a href="{{ path('event_delA',{'id':i.id}) }}" class="btn btn-danger btn-circle">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </div>
    <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
{% endblock %}